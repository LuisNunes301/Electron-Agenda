{
  "appId": "com.luisvinicius.agendatelefonica",
  "productName": "Agenda Telef√¥nica",
  "directories": {
    "buildResources": "build",
    "output": "dist"
  },
  "files": [
    "src/electron/**/*",
    "src/preload/**/*",
    "src/renderer/**/*",
    "src/utils/**/*",
    "src/index.html",
    "db/**/*"
  ],
  "extraResources": [
    {
      "from": "db",
      "to": "db",
      "filter": ["**/*.wasm"]
    }
  ],
  "asar": true,
  "icon": "build/desktopIcon.png",
  "win": {
    "target": [
      "portable",
      "msi"
    ],
    "artifactName": "AgendaTelefone-${version}-win.${ext}"
  }
}
